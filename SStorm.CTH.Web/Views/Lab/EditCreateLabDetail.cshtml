@model SStorm.CTH.DAL.EntityClasses.CTHLabDetailEntity
@using SStorm.CTH.Web.Resources
@inject LocService SharedLocalizer
<form asp-action="EditCreateLabDetail">
    <div class="color-line"></div>

    <div class="modal-header">
        <h4 class="modal-title mt-0" id="custom-width-modalLabel">@SharedLocalizer.GetLocalizedHtmlString("EditCreate") @SharedLocalizer.GetLocalizedHtmlString("LabItems")</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="hidden" asp-for="LabID" value="@Model.LabID" />

        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="LabDetailsName" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("LabItems")</label>
                <input asp-for="LabDetailsName" class="form-control" required />
                <span asp-validation-for="LabDetailsName" class="text-danger"></span>
            </div>
        </div>
