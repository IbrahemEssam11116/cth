@model SStorm.CTH.DAL.EntityClasses.CTHUserEntity
@using SStorm.CTH.Web.Resources
@inject LocService SharedLocalizer
@{
    Layout = null;
}

<div class="color-line"></div>
<div class="modal-header">
    <h4 class="modal-title mt-0" id="custom-width-modalLabel">@SharedLocalizer.GetLocalizedHtmlString("EdiCreate") @SharedLocalizer.GetLocalizedHtmlString("User")</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<form asp-action="EditCreate">
    <div class="modal-body">
        <input type="hidden" asp-for="ID" name="ID" id="ID" value="@Model.ID" />

        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="UserName" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("username")</label>
                <input class="form-control" asp-for="UserName" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="Password" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("Password")</label>
                <input class="form-control" asp-for="Password" type="password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="Email" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("Email")</label>
                <input class="form-control" asp-for="Email" type="email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="modal-footer">
            <a class="btn btn-secondary text-white" id="CancelBtn" data-dismiss="modal">@SharedLocalizer.GetLocalizedHtmlString("Cancel")</a>

            <button type="submit" class="btn btn-info waves-effect waves-light">@SharedLocalizer.GetLocalizedHtmlString("Save")</button>
        </div>
    </div>
</form>
