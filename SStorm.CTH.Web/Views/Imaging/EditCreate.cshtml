@model SStorm.CTH.DAL.EntityClasses.CTHImagingEntity
@using SStorm.CTH.Web.Resources
@inject LocService SharedLocalizer
<form asp-action="EditCreate">
    <div class="color-line"></div>

    <div class="modal-header">
        <h4 class="modal-title mt-0" id="custom-width-modalLabel">@SharedLocalizer.GetLocalizedHtmlString("EditCreate") @SharedLocalizer.GetLocalizedHtmlString("Imaging")</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="ID" value="@Model.ID" />

        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="ImageName" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("ImageName")</label>
                <input asp-for="ImageName" class="form-control" required />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
        </div>
