@model SStorm.CTH.DAL.EntityClasses.CTHDrugEntity
@using SStorm.CTH.Web.Resources
@inject LocService SharedLocalizer
<style>
    .modal-content {
        width: 700px;
    }
</style>
<div class="color-line" style="width:700px"></div>
<div class="card" style="width:700px">
    <div class="card-body">
        <div class="modal-header">
            <h4 class="modal-title mt-0" id="custom-width-modalLabel">@SharedLocalizer.GetLocalizedHtmlString("Files")</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="table-responsive">
                <table class="table m-0 table-colored-bordered table-bordered-info table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@SharedLocalizer.GetLocalizedHtmlString("FileName")</th>
                            <th>@SharedLocalizer.GetLocalizedHtmlString("Actions")</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.CTHDrugAttachmentCollection.Count() == 0)
                        {
                            <tr>
                                <th scope="row" colspan="7">@SharedLocalizer.GetLocalizedHtmlString("NoData")</th>
                            </tr>
                        }
                        @foreach (var item in Model.CTHDrugAttachmentCollection)
                        {
                            <tr>
                                <td>@item.Attachment</td>
                                <td>
                                    <a class="btn btn-dark" href="@Url.Action("DownloadFile", "Protocol", new { ID = item.ID })">
                                        <i class="btn btn-xs fa fa-download text-info"></i>
                                        @SharedLocalizer.GetLocalizedHtmlString("Download")
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>