@model SStorm.CTH.DAL.EntityClasses.CTHSpecialCasePartEntity
@using SStorm.CTH.Web.Resources
@inject LocService SharedLocalizer
<form asp-action="EditCreate">
    <div class="color-line"></div>

    <div class="modal-header">
        <h4 class="modal-title mt-0" id="custom-width-modalLabel">@SharedLocalizer.GetLocalizedHtmlString("EditCreate") @SharedLocalizer.GetLocalizedHtmlString("Part")</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="hidden" asp-for="CaseID" value="@Model.CaseID" />

        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="PartName" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("PartName")</label>
                <input asp-for="PartName" class="form-control" required />
                <span asp-validation-for="PartName" class="text-danger"></span>
            </div>
        </div>
