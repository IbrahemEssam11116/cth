@model LabGroupLabModel
@using SStorm.CTH.Web.Resources
@inject LocService SharedLocalizer
@{
    Layout = null;
}

<div class="color-line"></div>
<div class="modal-header">
    <h4 class="modal-title mt-0" id="custom-width-modalLabel">@SharedLocalizer.GetLocalizedHtmlString("EdiCreate") @SharedLocalizer.GetLocalizedHtmlString("LabGroup")</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<form asp-action="EditCreate">
    <div class="modal-body">
        <input type="hidden" asp-for="labGroupLabEntity.ID"/>
        <input type="hidden" asp-for="labGroupLabEntity.IsNew"/>
        <div class="form-group row">
            <div class="col-md-12">
                <input class="form-control" asp-for="@Model.LabGroupID" hidden>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="@Model.labGroupLabEntity.LabID" class="control-label"></label>
                <select asp-for="@Model.labGroupLabEntity.LabID" class="form-control select2" asp-items="Model.LabList">
                    <option selected disabled>Select</option>
                </select>
                <span asp-validation-for="@Model.labGroupLabEntity.LabID" class="text-danger"></span>
            </div>
        </div>

        <div class="modal-footer">
            <a class="btn btn-secondary text-white" id="CancelBtn" data-dismiss="modal">@SharedLocalizer.GetLocalizedHtmlString("Cancel")</a>

            <button type="submit" class="btn btn-info waves-effect waves-light">@SharedLocalizer.GetLocalizedHtmlString("Save")</button>
        </div>
    </div>
</form>
