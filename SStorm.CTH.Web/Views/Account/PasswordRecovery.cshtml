@model ForgotPasswordModel
@{
    ViewData["Title"] = "Password Recovery";
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}

<div class="account-pages my-5 pt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div>


                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card">
                                <div class="text-center mb-4">
                                    <a href="index.html">
                                        <span><img src="~/assets/images/CAP1.jpeg" alt="" height="225" width="450"></span>
                                    </a>
                                </div>
                                <div class="card-body">
                                    <form asp-controller="Account" asp-action="PasswordRecovery">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group mb-3">

                                            <label asp-for="Email">Email</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                                                </div>
                                                <input class="form-control" asp-for="Email" placeholder="Enter your Email" required>
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger"></span>

                                        </div>
                                        <div class="form-group text-center mb-3">
                                            <button class="btn btn-outline-info btn-rounded waves-effect waves-light" type="submit">Reset Password</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
                <!-- end card -->



            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>



