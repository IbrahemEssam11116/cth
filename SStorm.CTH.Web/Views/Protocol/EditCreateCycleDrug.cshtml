@model SStorm.CTH.Web.Models.CycleDrugModel
@using SStorm.CTH.Web.Resources
@inject LocService SharedLocalizer
<div class="color-line"></div>
<div class="card">
    <div class="card-body">
        <form asp-action="EditCreateCycleDrug">
            <div class="modal-header">
                <h4 class="modal-title mt-0" id="custom-width-modalLabel">@SharedLocalizer.GetLocalizedHtmlString("EditCreate") @SharedLocalizer.GetLocalizedHtmlString("CycleDrugs")</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="cycleDrugEntity.ID" value="@Model.cycleDrugEntity.ID" />
                <input type="hidden" asp-for="cycleDrugEntity.CycleID" value="@Model.cycleDrugEntity.CycleID" />
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="cycleDrugEntity.DrugID" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("Drug")</label>
                        <select id="EveryUnit" asp-for="cycleDrugEntity.DrugID" class="form-control selectpicker" data-live-search="true" asp-items="Model.DrugList" required>
                            <option selected disabled value="">
                                @SharedLocalizer.GetLocalizedHtmlString("Select") @SharedLocalizer.GetLocalizedHtmlString("Drug")
                            </option>
                        </select>
                        <span asp-validation-for="cycleDrugEntity.DrugID" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @*<a asp-controller="Protocol"  asp-action="EditCreateChemotherapyProtocol" asp-route-ID="@Model.ChProID" asp-route-CancerTypeID="@Model.CancerTypeID" class="btn btn-secondary waves-effect">Back</a>*@
                <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">@SharedLocalizer.GetLocalizedHtmlString("Cancel")</button>

                <button type="submit" class="btn btn-info waves-effect waves-light">@SharedLocalizer.GetLocalizedHtmlString("Save")</button>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('select').selectpicker({
            dropupAuto: false
        });
    });
</script>