<script src="~/assets/ajax/Binding.js"></script>
<script>
    $(document).ready(function () {
        $('select').selectpicker({
            dropupAuto: false
        });
    });
</script>
<script>
    $(document).ready(function () {
        $("#btnCloseform").click(function () {
            $("#formdiv").slideToggle(1000);
        })
    });
</script>