@model SStorm.CTH.Web.Models.DrugSymptomModel
@using SStorm.CTH.Web.Resources
@inject LocService SharedLocalizer
<link href="~/assets/css/site.css" rel="stylesheet" />
<form asp-action="EditCreateSymptom">
    <div class="color-line"></div>

    <div class="modal-header">
        <h4 class="modal-title mt-0" id="custom-width-modalLabel">@SharedLocalizer.GetLocalizedHtmlString("EditCreate") @SharedLocalizer.GetLocalizedHtmlString("DoseLimitingToxicityType")</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="DrugSymptomEntity.ID" value="@Model.DrugSymptomEntity.ID" />
        <input type="hidden" asp-for="DrugSymptomEntity.DrugID" value="@Model.DrugSymptomEntity.DrugID" />
        <input type="hidden" asp-for="ProtocolID" value="@Model.ProtocolID" />

        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="DrugSymptomEntity.SymtomID">@SharedLocalizer.GetLocalizedHtmlString("DoseLimitingToxicityType")</label>
                <select asp-for="DrugSymptomEntity.SymtomID" class="form-control selectpicker" required
                        data-live-search="true" asp-items="Model.SymptomList">
                    <option required selected disabled value="0">
                        @SharedLocalizer.GetLocalizedHtmlString("Select")@SharedLocalizer.GetLocalizedHtmlString("DoseLimitingToxicityType")
                    </option>
                </select>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">@SharedLocalizer.GetLocalizedHtmlString("Cancel")</button>

        <button type="submit" class="btn btn-info waves-effect waves-light">@SharedLocalizer.GetLocalizedHtmlString("Save")</button>
    </div>
</form>
<script>
    $(document).ready(function () {
        $('select').selectpicker({
            dropupAuto: false
        });
    });
</script>


